<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppPortfolioButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">@dimen/app_portfolio_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/app_portfolio_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/app_portfolio_button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/app_portfolio_button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/app_portfolio_button_padding_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/app_portfolio_button_margin_bottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/app_portfolio_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#F08C35</item>
    </style>

    <style name="AppPortfolioButton.Featured" parent="AppPortfolioButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#FF4D4D</item>
    </style>

</resources>
